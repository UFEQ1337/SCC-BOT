{
  "name": "SCC-BOT",
  "version": "1.0.4",
  "description": "Bot do automatyzacji centrali",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "keywords": [],
  "author": "Mateusz Popielarz",
  "license": "ISC",
  "devDependencies": {
    "electron": "^31.2.0",
    "electron-builder": "^24.13.3",
    "electron-builder-squirrel-windows": "^24.13.3"
  },
  "build": {
    "appId": "pl.Popielarz.SCC",
    "productName": "SCC BOT",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "package.json",
      "web/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "portable",
      "icon": "web/img/icon.ico",
      "legalTrademarks": "Mateusz Popielarzâ„¢",
      "publisherName": "Mateusz Popielarz"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "web/img/icon-512.ico"
    }
  },
  "dependencies": {
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.2/xlsx-0.20.2.tgz"
  }
}
